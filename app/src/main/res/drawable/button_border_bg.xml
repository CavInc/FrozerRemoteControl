<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <shape android:shape="rectangle">
                <solid android:color="@color/app_ligth_blue"/>
                <padding android:bottom="8dp"
                    android:top="8dp"
                    android:left="8dp"
                    android:right="8dp"/>
            </shape>
            <shape android:shape="rectangle">
                <stroke android:color="@color/app_lgith_blue_ligth"
                    android:width="3dp"/>
                <padding android:bottom="8dp"
                    android:top="8dp"
                    android:left="8dp"
                    android:right="8dp"/>
            </shape>
        </layer-list>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/app_ligth_blue"
                android:width="3dp"/>
            <padding android:bottom="8dp"
                android:top="8dp"
                android:left="8dp"
                android:right="8dp"/>
        </shape>
    </item>
</selector>