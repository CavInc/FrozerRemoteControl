<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@color/app_indigo_dark">
    <TextView
        android:id="@+id/save_device_name"
        android:text="Имя устройства"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/app_ligth_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/save_device_name_et"
        android:textSize="18sp"
        android:layout_below="@id/save_device_name"
        android:textColor="@color/app_ligth_blue"
        android:background="@drawable/edit_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Вид"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/app_ligth_blue"
        android:id="@+id/save_view_tx"
        android:layout_below="@id/save_device_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/frm"
        android:layout_marginTop="8dp"
        android:layout_below="@id/save_view_tx"
        android:background="@drawable/border_white_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/frozen_f1"
                    android:src="@drawable/ic_fr1"
                    android:tint="@color/app_lgith_blue_ligth"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <ImageView
                    android:id="@+id/frozen_f4"
                    android:tint="@color/app_lgith_blue_ligth"
                    android:src="@drawable/ic_fr4"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/frozen_f2"
                android:src="@drawable/ic_fr2"
                android:tint="@color/app_lgith_blue_ligth"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:layout_width="256dp"
                android:layout_height="80dp" />
            <ImageView
                android:id="@+id/frozen_f3"
                android:tint="@color/app_lgith_blue_ligth"
                android:src="@drawable/ic_fr3"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:layout_width="300dp"
                android:layout_height="80dp" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>