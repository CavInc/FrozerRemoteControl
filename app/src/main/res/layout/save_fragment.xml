<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@color/app_indigo_dark">
    <TextView
        android:id="@+id/save_device_name"
        android:text="Имя устройства"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/app_ligth_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/save_device_name_et"
        android:textSize="18sp"
        android:layout_below="@id/save_device_name"
        android:textColor="@color/app_ligth_blue"
        android:background="@drawable/edit_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>