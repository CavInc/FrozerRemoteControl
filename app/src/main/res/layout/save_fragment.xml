<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@color/app_indigo_dark">
    <TextView
        android:id="@+id/save_device_name"
        android:text="Имя устройства"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/app_ligth_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/save_device_name_et"
        android:textSize="18sp"
        android:layout_below="@id/save_device_name"
        android:textColor="@color/app_ligth_blue"
        android:background="@drawable/edit_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Вид"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/app_ligth_blue"
        android:id="@+id/save_view_tx"
        android:layout_below="@id/save_device_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/frm"
        android:layout_marginTop="8dp"
        android:layout_below="@id/save_view_tx"
        android:background="@drawable/border_white_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_fr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/ic_fr2"
                android:layout_width="256dp"
                android:layout_height="128dp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>