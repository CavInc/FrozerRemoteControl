<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button
        android:id="@+id/device_list_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_border_bg"
        android:text="Вид список"
        android:textColor="@color/app_ligth_blue"
        android:textStyle="bold" />
    <FrameLayout
        android:id="@+id/device_schema_map"
        android:layout_below="@+id/device_list_bt"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>